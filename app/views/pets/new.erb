<h1>Create a new Pet</h1>

<!-- Pet(id: integer, name: string, owner_id: integer) -->

<form method="post" action="/pets">
  <input name="pet[:name]" id="pet_name" />


<h3>Existing Owners</h3>
<% @owners.each do |owner| %>
  <input type="radio" name="<%= owner.id %>" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %></input><br>
<% end %>
<br>

<h3>New Owner</h3>
<label>Owner Name: </label>
<br>
<input type="text" name="owner[:name]" id="owner_name"></input>
<br><br>

<input type="submit" name="submit" value="Create Pet" />
</form>
